<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alexander Capehart | {{ title }}</title>
    <link rel="stylesheet" href="/assets/styles/styles.css">
    <script src="/assets/scripts/htmx.min.js"></script>
</head>
<body>
    <div class="mobile-header">
        <div class="name-box-mobile">
            <div class="scroll-container-mobile">
                <div class="scroll-wrapper-mobile">
                    <div class="text-item-mobile">OxygenCobalt.</div>
                    <div class="text-item-mobile">Alexander Capehart.</div>
                    <div class="text-item-mobile">OxygenCobalt.</div>
                    <div class="text-item-mobile">Alexander Capehart.</div>
                    <div class="text-item-mobile">OxygenCobalt.</div>
                </div>
            </div>
        </div>
        <button class="menu-toggle" aria-label="Toggle Menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </button>
    </div>
    
    <div class="container">
        <div class="sidebar">
            <div class="name-box">
                <div class="scroll-container">
                    <div class="scroll-wrapper">
                        <div class="text-item">OxygenCobalt.</div>
                        <div class="text-item">Alexander Capehart.</div>
                        <div class="text-item">OxygenCobalt.</div>
                        <div class="text-item">Alexander Capehart.</div>
                        <div class="text-item">OxygenCobalt.</div>
                    </div>
                </div>
            </div>
            <nav class="tabs">
                {% for item in navigation.items %}
                {% set isActive = page.url == item.url or (page.url == "/" and item.url == "/") %}
                <button class="tab-button {% if isActive %}active{% endif %}"
                        hx-get="{{ item.partial }}"
                        hx-target="#tab-content"
                        hx-push-url="{{ item.url }}"
                        hx-swap="innerHTML transition:true"
                        hx-trigger="click">
                    {{ item.text }}
                </button>
                {% endfor %}
            </nav>
        </div>
        <div class="content">
            <div id="tab-content" class="tab-content active">
                {{ content | safe }}
            </div>
            <div class="content-fade-bottom"></div>
        </div>
    </div>
    <script src="/assets/scripts/script.js"></script>
    <script>
        // Update active state when HTMX navigation occurs
        document.body.addEventListener('htmx:afterSettle', function(event) {
            // Remove active class from all buttons
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            
            // Find the button that matches the current URL and make it active
            const currentPath = window.location.pathname;
            const activeButton = document.querySelector(`.tab-button[hx-push-url="${currentPath}"]`);
            if (activeButton) {
                activeButton.classList.add('active');
            }
        });
    </script>
</body>
</html> 